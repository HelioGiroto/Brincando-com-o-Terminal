conky.config = {
	background = false,
	update_interval = 1,

	cpu_avg_samples = 2,
	net_avg_samples = 2,
	temperature_unit = 'celsius',

	double_buffer = true,
	no_buffers = true,
	text_buffer_size = 2048,

	gap_x = 20,
	gap_y = 40,
	minimum_width = 225, 
	maximum_width = 350,
	
	own_window = true,
	own_window_type = 'desktop',
	own_window_class = 'Conky',
	own_window_argb_visual = true,
	own_window_argb_value = 0,
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	
	border_inner_margin = 10,
	border_outer_margin = 0,
	alignment = 'top_left',

	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = false,

	override_utf8_locale = true,
	use_xft = true,
	font = 'Monospace:size=8',
	xftalpha = 0.5,
	uppercase = false,

	default_color = 'white',
	color0 = 'FFFFFF',
	color1 = 'FFA500',
	color2 = '99bbff'
};




conky.text = 
[[
${color1}TECLAS DE ATALHO ${hr 2}$color

SUPER m 	 - Menu
SUPER d 	 - Desktop

SUPER t 	 - Terminal
SUPER 1 	 - Terminal
Ctrl + Alt + t  - Terminal

SUPER f 	 - File Manager
SUPER 2 	 - File Manager

SUPER w 	 - WebBrowser
SUPER 3 	 - WebBrowser

SUPER e 	 - Gedit
SUPER 4 	 - Gedit

SUPER c 	 - Calculadora
SUPER 5 	 - Calculadora

SUPER 9 	 - Github Senha
SUPER v 	 - VS Code
SUPER espaço 	  - ROFI
SUPER g 	 - Gimp
SUPER s 	 - Skype

ALT F2 	 - Search File/Folder

SUPER + dir 	 - Metade dir. da tela
SUPER + esq 	 - Metade esq. da tela

SUPER + Delete	 - Bloqueia tela


${color2}${font Liberation Sans:pixelsize=60}${time %H:%M}${font}$color

${font Sans-serif:pixelsize=30}${time %d/%m/%Y}${font}

${exec cal}

]];


